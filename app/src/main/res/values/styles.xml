<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BankingButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">85dp</item>

        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">top</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="BankingCircleButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>

        <item name="android:background">@drawable/circle_button</item>
        <item name="backgroundTint">@null</item>


        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:gravity">center</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/black</item>

        <item name="android:paddingTop">8dp</item>
    </style>



</resources>