<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isSuccess"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_2"
        android:fitsSystemWindows="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/layoutBottom"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="#4CAF50"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#E8F5E9"
                    android:padding="20dp"
                    android:elevation="8dp"/>

                <TextView
                    android:id="@+id/tvStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao dịch thành công!"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvFailureReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin giao dịch không hợp lệ"
                    android:textColor="#FFCDD2"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginBottom="24dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền"
                            android:gravity="center"
                            android:textColor="#757575"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvAmountValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            tools:text="- 1,500,000 VND" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layerType="software"
                            android:dashGap="4dp"
                            android:dashWidth="8dp"
                            android:layout_marginBottom="24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Người nhận"
                                android:textColor="#757575" />
                            <TextView
                                android:id="@+id/tvRecipientNameValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="NGUYEN VAN A" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tài khoản"
                                android:textColor="#757575" />
                            <TextView
                                android:id="@+id/tvRecipientAccountValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="1903338888" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thời gian"
                                android:textColor="#757575" />
                            <TextView
                                android:id="@+id/tvTimeValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="15:30 - 20/12/2025" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Nội dung"
                                android:textColor="#757575" />
                            <TextView
                                android:id="@+id/tvDescValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textStyle="italic"
                                tools:text="Chuyen tien mua hang" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView android:id="@+id/tvAmountLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tvRecipientNameLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tvRecipientAccountLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tvTimeLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                <TextView android:id="@+id/tvDescLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewTransaction"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="GIAO DỊCH MỚI"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:cornerRadius="28dp"
                android:backgroundTint="#0091EA"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToHome"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="VỀ TRANG CHỦ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cornerRadius="28dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>