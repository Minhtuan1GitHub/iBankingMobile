<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        tools:context=".YourActivityName">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chi Tiết Khách Hàng"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và Tên Đầy Đủ"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tilName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số Điện Thoại"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tilPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mã OTP"
                android:inputType="numberPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvPaymentAccountHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tài khoản Thanh toán"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tilOtp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAccountNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Số tài khoản:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPaymentAccountHeader" />

        <TextView
            android:id="@+id/tbAccountNumberValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="viewEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvAccountNumberLabel"
            app:layout_constraintStart_toEndOf="@+id/tvAccountNumberLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1234 5678 9012" />

        <TextView
            android:id="@+id/tvAccountTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Loại tài khoản:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountNumberLabel" />

        <TextView
            android:id="@+id/tbAccountType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="viewEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvAccountTypeLabel"
            app:layout_constraintStart_toEndOf="@+id/tvAccountTypeLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Tài khoản thanh toán" />

        <TextView
            android:id="@+id/tvBalanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Số dư hiện tại:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountTypeLabel" />

        <TextView
            android:id="@+id/tbBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="viewEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvBalanceLabel"
            app:layout_constraintStart_toEndOf="@+id/tvBalanceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1.500.000 VND" />

        <TextView
            android:id="@+id/tvSavingAccountHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tài khoản Tiết kiệm"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvBalanceLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAccountTypeLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Loại tài khoản:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSavingAccountHeader" />

        <TextView
            android:id="@+id/tbAccountType1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="viewEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvAccountTypeLabel1"
            app:layout_constraintStart_toEndOf="@+id/tvAccountTypeLabel1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Tài khoản tiết kiệm" />

        <TextView
            android:id="@+id/tvBalanceLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Số dư hiện tại:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountTypeLabel1" />

        <TextView
            android:id="@+id/tbBalance1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="viewEnd"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvBalanceLabel1"
            app:layout_constraintStart_toEndOf="@+id/tvBalanceLabel1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1.500.000 VND" />

        <TextView
            android:id="@+id/tvLaiSuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lãi suất (%):"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBalanceLabel1"/>

        <EditText
            android:id="@+id/edtLaiSuat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="5"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvLaiSuat"
            app:layout_constraintStart_toEndOf="@+id/tvLaiSuat"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvKyHan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kỳ hạn (tháng):"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLaiSuat"/>

        <EditText
            android:id="@+id/edtKyHan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="12"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvKyHan"
            app:layout_constraintStart_toEndOf="@+id/tvKyHan"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/createSavingAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:minHeight="56dp"
            android:text="TẠO TÀI KHOẢN TIẾT KIỆM"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvKyHan"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LƯU THÔNG TIN"
            android:minHeight="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>