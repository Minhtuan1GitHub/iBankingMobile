<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_2"
        android:fitsSystemWindows="true"
        tools:context=".YourHomeScreenActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
            android:id="@+id/main">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="80dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5sp"
                    android:layout_margin="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageButton
                            android:id="@+id/imgAvatar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_account_circle_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="@string/avatar_desc"
                            app:layout_constraintVertical_bias="0.5" />

                        <TextView
                            android:id="@+id/tvHello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xin chào"
                            app:layout_constraintStart_toEndOf="@id/imgAvatar"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tvUsername"/>

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imgAvatar"
                            app:layout_constraintTop_toBottomOf="@+id/tvHello" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNotify"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"

                            android:backgroundTint="@color/white"
                            android:focusable="true"
                            android:minHeight="0dp"

                            app:cornerRadius="30dp"
                            android:contentDescription="@string/notify_desc"

                            app:icon="@drawable/ic_notify_2"
                            app:iconGravity="textTop"
                            app:iconSize="40dp"
                            app:iconTint="#00A2E8"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="20dp"
                    app:cardElevation="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewTop">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvSodu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:drawableStart="@drawable/ic_balance_wallet"
                            android:padding="5dp"
                            android:text=" Số dư của bạn"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:padding="6dp"
                            android:text="123,456,789 VND"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSodu" />


                        <ImageButton
                            android:id="@+id/imgEyes"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="36dp"
                            android:background="@null"

                            android:src="@drawable/ic_visibility_off"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"

                            app:layout_constraintStart_toEndOf="@id/tvBalance"
                            android:contentDescription="@string/eyes_desc"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/imgQRCode"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/qr_code_scanner_50"
                            android:background="@null"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:contentDescription="@string/qr_desc"
                            app:layout_constraintVertical_bias="0.1" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/tvBalance"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                            <!-- Tra cứu -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCheck"
                                style="@style/BankingCircleButtonStyle"
                                android:text="Tra cứu"
                                app:icon="@drawable/ic_check" />

                            <!-- Tiết kiệm -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSave"
                                style="@style/BankingCircleButtonStyle"
                                android:text="Tiết kiệm"
                                app:icon="@drawable/ic_saving" />

                            <!-- Khoản vay -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMortgage"
                                style="@style/BankingCircleButtonStyle"
                                android:text="Khoản vay"
                                app:icon="@drawable/ic_loan" />

                            <!-- Sao kê -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnHistory"
                                style="@style/BankingCircleButtonStyle"
                                android:text="Lịch sử"
                                app:icon="@drawable/ic_history_24" />


                            <androidx.constraintlayout.helper.widget.Flow
                                android:id="@+id/flow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"

                                app:constraint_referenced_ids="btnCheck,btnSave,btnMortgage,btnHistory"
                                app:flow_horizontalGap="5dp"
                                app:flow_verticalGap="8dp"

                                app:flow_horizontalStyle="spread"
                                app:flow_wrapMode="none"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"

                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    app:cardElevation="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewMid">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvGiaodich"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:text="Giao dịch"
                            android:textSize="16sp"
                            android:padding="6dp"
                            android:textStyle="bold"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <!-- Chuyển tiền -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTransfer"
                            style="@style/BankingButtonStyle"
                            android:text="Chuyển tiền"
                            app:icon="@drawable/ic_transfer_24"
                            app:iconTint="@color/black"
                             />

                        <!-- Nạp tiền -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeposit"
                            style="@style/BankingButtonStyle"
                            android:text="Nạp tiền"
                            app:icon="@drawable/ic_deposit"
                            app:iconTint="@color/black"
                            />

                        <!-- Rút tiền -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWithdraw"
                            style="@style/BankingButtonStyle"
                            android:text="Rút tiền"
                            app:icon="@drawable/ic_withdraw"
                            app:iconTint="@color/black"
                            />

                        <!-- Hóa đơn -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBill"
                            style="@style/BankingButtonStyle"
                            android:text="Hóa đơn"
                            app:icon="@drawable/ic_bill_24"
                            app:iconTint="@color/black"
                            />

                        <!-- Nạp ĐT -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPhone"
                            style="@style/BankingButtonStyle"
                            android:text="Nạp ĐT"
                            app:icon="@drawable/ic_mobile_2_24"
                            app:iconTint="@color/black"
                            />

                        <!-- Ví VNPay -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWallet"
                            style="@style/BankingButtonStyle"
                            android:text="Ví VNPay"
                            app:icon="@drawable/ic_wallet"
                            app:iconTint="@color/black"
                            />

                        <!-- Flow sắp xếp nút -->
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/flow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"

                            app:constraint_referenced_ids="btnTransfer,btnDeposit,btnWithdraw,btnBill,btnPhone,btnWallet"
                            app:flow_horizontalGap="18dp"
                            app:flow_verticalGap="10dp"
                            app:flow_wrapMode="chain"
                            app:flow_horizontalStyle="spread"

                            app:layout_constraintTop_toBottomOf="@id/tvGiaodich"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    app:cardElevation="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewBot">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:padding="5dp"
                            android:text="Lịch sử giao dịch"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:padding="5dp"
                            android:text="Xem tất cả >>>"
                            android:textColor="@color/common_google_signin_btn_text_light"
                            app:backgroundTint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_margin="20dp"-->
<!--                    android:padding="10dp"-->
<!--                    android:nestedScrollingEnabled="false"-->
<!--                    android:background="@color/white"-->
<!--                    tools:itemCount="2"-->
<!--                    tools:listitem="@layout/item_transaction"-->
<!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/cardViewHistory"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    />-->

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Mở màn hình Lịch sử Giao dịch"
                    app:srcCompat="@drawable/outline_change_history_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/fabSetting" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Mở màn hình Cài Đặt"
                    app:srcCompat="@drawable/outline_all_out_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/fabTransfer" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:contentDescription="Tạo giao dịch Chuyển Khoản Mới"
                    android:backgroundTint="?attr/colorSecondary"
                    app:tint="@android:color/white"
                    app:srcCompat="@drawable/outline_attach_money_24"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewHistory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/bottomNavContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabCradleMargin="10dp"
                app:fabCradleRoundedCornerRadius="20dp"
                app:fabAlignmentMode="center"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/navHome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_home" app:tint="#563389"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Trang chủ" android:textSize="10sp" android:textColor="#563389"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/navHistory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_history_24" app:tint="#999"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lịch sử" android:textSize="10sp" android:textColor="#999"/>
                    </LinearLayout>

                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/navMap"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_map" app:tint="#999"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bản đồ" android:textSize="10sp" android:textColor="#999"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/navProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_account_circle_24" app:tint="#999"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tài khoản" android:textSize="10sp" android:textColor="#999"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTransfers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#563389"
                android:src="@drawable/ic_transfer_24"
                app:backgroundTint="#00A2E8"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:layout_anchor="@id/bottomAppBar"
                android:contentDescription="@string/transfer_desc"
                app:tint="#FFF" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>